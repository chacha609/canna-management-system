# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cannabis_management
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Cannabis Management System <noreply@yourcompany.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# METRC API Configuration
METRC_API_URL=https://api-ca.metrc.com
METRC_USER_API_KEY=your_metrc_user_api_key
METRC_FACILITY_LICENSE_NUMBER=your_facility_license
METRC_SOFTWARE_API_KEY=your_metrc_software_key

# Growlink API Configuration
GROWLINK_API_URL=https://api.growlink.com
GROWLINK_API_KEY=your_growlink_api_key
GROWLINK_FACILITY_ID=your_growlink_facility_id

# Altequa HVAC API Configuration
ALTEQUA_API_URL=https://api.altequa.com
ALTEQUA_API_KEY=your_altequa_api_key
ALTEQUA_FACILITY_ID=your_altequa_facility_id

# Dositron Integration (if available)
DOSITRON_API_URL=your_dositron_endpoint
DOSITRON_API_KEY=your_dositron_api_key

# Google Workspace Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Development/Testing
SEED_DATABASE=false
ENABLE_SWAGGER=true